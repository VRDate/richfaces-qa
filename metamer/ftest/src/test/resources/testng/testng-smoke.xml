<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Tests">

    <test name="All Components" preserve-order="true">
        <groups>
            <run>
                <include name="arquillian" />
                <include name="smoke" />
                <exclude name="Future" />
                <exclude name="extended" />
            </run>
        </groups>

        <packages>
            <package name="org.richfaces.tests.metamer.ftest.*" />
        </packages>
    </test>
    
</suite>
